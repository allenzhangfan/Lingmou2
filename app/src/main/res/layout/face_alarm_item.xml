<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dip"
    app:cardCornerRadius="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dip"
            tools:text="市民广场服务站"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/mine_divider_line_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dip">
            <ImageView
                android:id="@+id/check_iv"
                android:layout_width="0dip"
                android:layout_height="140dip"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/edit_text_hint_color"
                        android:paddingRight="5dip"
                        android:text="相似度:"
                        />
                    <TextView
                        android:id="@+id/score_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/edit_text_color"
                        tools:text="100%"
                        />
                </LinearLayout>

                <cloud.antelope.lingmou.mvp.ui.widget.AlarmProgressView
                    android:id="@+id/progress_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="8dip"
                    app:vein_src="@drawable/alarm_progress"
                    android:layout_marginTop="10dip"
                    />
                <TextView
                    android:id="@+id/create_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mine_text_color"
                    tools:text="2017.11.29"
                    android:layout_marginTop="10dip"
                    />
                <TextView
                    android:id="@+id/status_tv"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="未处理"
                    android:paddingLeft="16dip"
                    android:paddingRight="16dip"
                    android:paddingTop="6dip"
                    android:paddingBottom="6dip"
                    android:layout_marginTop="10dip"
                    android:elevation="4dip"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/beibukong_iv"
                android:layout_width="0dip"
                android:layout_height="140dip"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>