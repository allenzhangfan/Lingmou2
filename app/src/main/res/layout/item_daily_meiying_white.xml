<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:paddingBottom="@dimen/dp8"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_stroke_5_corner"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp40"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            >

            <TextView
                android:id="@+id/alarm_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                tools:text="第一个布控任务"
                />

            <TextView
                android:id="@+id/alarm_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp12"
                tools:text="待处理"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/answer_list_divide_line"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp16"
            >

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80"
                app:cardCornerRadius="@dimen/dp2"
                app:cardElevation="@dimen/dp2"
                >
            <ImageView
                android:id="@+id/alarm_zhuapai_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_rect_stroke_5_corner"
                />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp16"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp4"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="告警类型"
                        android:textColor="@color/gray_777"
                        android:textSize="@dimen/sp14"
                        />

                    <TextView
                        android:id="@+id/alarm_type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:text="黑名单报警"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp4"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抓拍设备"
                        android:textColor="@color/gray_777"
                        android:textSize="@dimen/sp14"
                        />

                    <TextView
                        android:id="@+id/alarm_device_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:text="保利国际中心"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp4"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="抓拍时间"
                        android:textColor="@color/gray_777"
                        android:textSize="@dimen/sp14"
                        />

                    <TextView
                        android:id="@+id/alarm_capture_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:text="2018-05-08 15:33"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
