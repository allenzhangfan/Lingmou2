<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#66000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="12dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cloth_margin_left_right"
            android:text="报警时间"
            android:textColor="@color/tab_unselect_color"
            android:textSize="11sp" />

        <RadioGroup
            android:id="@+id/alarm_rg"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="@dimen/cloth_margin_left_right"
            android:layout_marginRight="@dimen/cloth_margin_left_right"
            android:layout_marginTop="18dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/alarm_none_rb"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cloth_alarm_bg_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="不限"
                android:textColor="@color/home_text_selector" />

            <RadioButton
                android:id="@+id/alarm_three_rb"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/cloth_text_padding_left"
                android:layout_weight="1"
                android:background="@drawable/cloth_alarm_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="近3天"
                android:textColor="@color/home_text_selector" />

            <RadioButton
                android:id="@+id/alarm_seven_rb"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/cloth_text_padding_left"
                android:layout_weight="1"
                android:background="@drawable/cloth_alarm_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="近7天"
                android:textColor="@color/home_text_selector" />

            <RadioButton
                android:id="@+id/alarm_thirty_rb"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/cloth_text_padding_left"
                android:layout_weight="1"
                android:background="@drawable/cloth_alarm_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="近30天"
                android:textColor="@color/home_text_selector" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/cloth_margin_left_right"
            android:layout_marginTop="18dip"
            android:text="处理状态"
            android:textColor="@color/tab_unselect_color"
            android:textSize="11sp" />

        <RadioGroup
            android:id="@+id/status_rg"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginLeft="@dimen/cloth_margin_left_right"
            android:layout_marginRight="@dimen/cloth_margin_left_right"
            android:layout_marginTop="18dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/status_none_rb"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cloth_alarm_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="不限"
                android:textColor="@color/home_text_selector" />

            <RadioButton
                android:id="@+id/status_undo_rb"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/cloth_text_padding_left"
                android:layout_weight="1"
                android:background="@drawable/cloth_alarm_bg_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="未处理"
                android:textColor="@color/home_text_selector" />

            <RadioButton
                android:id="@+id/status_valid_rb"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/cloth_text_padding_left"
                android:layout_weight="1"
                android:background="@drawable/cloth_alarm_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="有效"
                android:textColor="@color/home_text_selector" />

            <RadioButton
                android:id="@+id/status_invalid_rb"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/cloth_text_padding_left"
                android:layout_weight="1"
                android:background="@drawable/cloth_alarm_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="无效"
                android:textColor="@color/home_text_selector" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dip"
            android:background="@color/mine_divider_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clean_tv"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="清除筛选"
                android:textColor="@color/detail_title"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cofirm_tv"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/home_text_select"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/other_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>