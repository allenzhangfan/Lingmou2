<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp176"
        app:cardCornerRadius="@dimen/dp2"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_pic"
        android:background="@drawable/shape_rect_corner_2_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_car_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_333"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginLeft="@dimen/dp4"
        android:textSize="@dimen/sp15"
        android:textStyle="bold"
        tools:text="湘CV0509" />
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_777"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginLeft="@dimen/dp4"
        android:textSize="@dimen/sp14"
        android:layout_marginRight="@dimen/dp4"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="信丰县国光购物广场进口" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_777"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginLeft="@dimen/dp4"
        android:textSize="@dimen/sp14"
        android:layout_marginRight="@dimen/dp4"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="2018-09-05 19:52:13" />
</LinearLayout>