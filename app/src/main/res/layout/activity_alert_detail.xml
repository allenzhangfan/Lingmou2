<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_item" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_f7f7f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/dp164"
                    android:layout_height="@dimen/dp164"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp8"
                    app:cardCornerRadius="@dimen/dp2"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_rect_corner_2"
                        android:scaleType="fitCenter" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp4"
                    android:text="@string/zhuapai_picture"
                    android:textColor="@color/gray_616161"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mission_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp8"
                    android:drawableRight="@drawable/arrow_down"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingRight="@dimen/dp16"
                    android:paddingTop="@dimen/dp8"
                    android:text="@string/mission_detail"
                    android:textColor="@color/gray_424242"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_fold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="@string/deploy_mission_name"
                            android:textColor="@color/gray_424242"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_mission_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:textColor="@color/gray_212121"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            tools:text="辖区上访人员布控" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="@string/alarm_type"
                            android:textColor="@color/gray_424242"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_mission_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:textColor="@color/gray_212121"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            tools:text="事件布防" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="@string/capture_device"
                            android:textColor="@color/gray_424242"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_capture_device"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:drawableRight="@drawable/grey_arrow"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/gray_212121"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            tools:text="保利国际中心15F" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="@string/device_address"
                            android:textColor="@color/gray_424242"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_device_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp10"
                            android:drawableRight="@drawable/icon_location"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/gray_212121"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold"
                            tools:text="关山大道保利国际中心" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="@string/snapshot_time"
                            android:textColor="@color/gray_424242"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_snapshot_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:gravity="right|center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/gray_212121"
                            android:textSize="@dimen/sp14"
                            tools:text="2018-08-08 21:32:38" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:background="@color/white"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:paddingBottom="@dimen/dp7"
                    android:paddingTop="@dimen/dp16"
                    android:text="@string/remark_"
                    android:textColor="@color/gray_333"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_mission_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="@string/alert_detail_remark_hint"
                    android:minLines="5"
                    android:textColor="@color/gray_424242"
                    android:textColorHint="@color/gray_9e9e9e"
                    android:textSize="@dimen/sp12"
                    tools:text="请输入告警备注信息…" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:background="@drawable/shape_rect"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_invalid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/invalid"
            android:textColor="@color/gray_212121"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tv_valid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yellow_ff8f00"
            android:gravity="center"
            android:text="@string/valid"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
</LinearLayout>