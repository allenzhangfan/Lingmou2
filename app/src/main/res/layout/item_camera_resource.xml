<?xml version="1.0" encoding="utf-8"?>
<cloud.antelope.lingmou.mvp.ui.widget.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sml"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp86"
    android:background="@color/gray_f7f7f7">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp86"
        android:background="@color/white">

        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="@dimen/dp128"
            android:layout_height="@dimen/dp72"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            app:cardCornerRadius="@dimen/dp2"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play_small" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/cloud_step_collect_item_bg"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/dp4"
                    android:paddingLeft="@dimen/dp4"
                    android:text="在线"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:layout_marginTop="@dimen/dp4"
            android:layout_toRightOf="@+id/cv"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/gray_424242"
            android:textSize="@dimen/sp15"
            tools:text="关山大道保利国际中心15F B区办公区" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cv"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp18"
            android:layout_toLeftOf="@+id/iv_menu"
            android:layout_toRightOf="@+id/cv"
            android:ellipsize="start"
            android:singleLine="true"
            android:textColor="@color/gray_9e9e9e"
            android:textSize="@dimen/sp13"
            tools:text="关山大道保利国际中心15F B区办公区" />
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginRight="@dimen/dp13"
            android:padding="@dimen/dp3"
            android:src="@drawable/menu" />
        <!-- <LinearLayout
             android:id="@+id/ll_focus"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:gravity="center"
             android:orientation="vertical"
             android:paddingLeft="@dimen/dp16"
             android:paddingRight="@dimen/dp16">

             <ImageView
                 android:id="@+id/iv_focus"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/add_follow_yellow" />

             <TextView
                 android:id="@+id/tv_focus"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/yellow_ff8f00"
                 android:textSize="@dimen/sp12"
                 tools:text="关注" />
         </LinearLayout>-->

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:background="@color/comment_divide_line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_favorite"
        android:layout_width="@dimen/dp64"
        android:layout_height="match_parent"
        android:background="@color/gray_f7f7f7"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_favorite"
            android:background="@drawable/following"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="@dimen/dp64"
        android:layout_height="match_parent"
        android:background="@color/gray_f7f7f7"
        android:gravity="center"
        >
        <ImageView
            android:background="@drawable/facility_information"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40" />
    </RelativeLayout>
</cloud.antelope.lingmou.mvp.ui.widget.swipemenulib.SwipeMenuLayout>
