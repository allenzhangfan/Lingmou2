<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp4">


        <LinearLayout
            android:layout_width="@dimen/dp285"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp380"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upgrade_img_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/update_illustrations" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp16"
                    android:lineSpacingMultiplier="1.2"
                    android:textStyle="bold"
                    android:text="@string/upgrade"
                    android:textColor="@color/gray_212121"
                    android:textSize="@dimen/sp18" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp174"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginTop="@dimen/dp8">

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/gray_212121"
                        android:textSize="@dimen/sp14"
                        tools:text="发现新版本" />
                </ScrollView>

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@drawable/shape_updata_btn"
                    android:gravity="center"
                    android:text="@string/upgrade_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/btn_cacel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp24"
        android:src="@drawable/update_off" />
</LinearLayout>
