<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_head_item" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_ddd"/>
    <TextView
        android:id="@+id/tv_title"
        android:textStyle="bold"
        android:textSize="@dimen/sp17"
        android:textColor="@color/gray_212121"
        tools:text="智慧云眼v3.2.0主要更新"
        android:layout_marginTop="@dimen/dp24"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="2018年12月20日"
        android:textSize="@dimen/sp13"
        android:textColor="@color/gray_9e9e9e"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_margin="@dimen/dp20"
        android:textSize="@dimen/sp14"
        android:textColor="@color/gray_424242"
        android:lineSpacingMultiplier="1.2"
        android:text="1、新增车辆图库，可快速查找车辆；\n2、新增事件提醒功能；\n3、优化历史视频播放体验；"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>