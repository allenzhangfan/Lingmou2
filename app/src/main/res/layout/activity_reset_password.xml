<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_app"
        android:orientation="vertical">

        <include layout="@layout/include_head_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingBottom="10dip"
            android:paddingLeft="18dip"
            android:paddingTop="10dip"
            android:text="当前密码"
            android:textColor="@color/default_text_color"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/old_psw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:hint="@string/hint_input_current_password"
            android:minHeight="48dip"
            android:paddingLeft="18dip"
            android:textColor="@color/default_text_color"
            android:textColorHint="@color/tab_unselect_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="18dip"
            android:paddingTop="10dip"
            android:text="新密码"
            android:textColor="@color/default_text_color"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/new_psw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:hint="@string/hint_input_new_password"
            android:inputType="text"
            android:maxLength="20"
            android:minHeight="48dip"
            android:paddingLeft="18dip"
            android:textColor="@color/default_text_color"
            android:textColorHint="@color/tab_unselect_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="18dip"
            android:paddingTop="10dip"
            android:text="确认密码"
            android:textColor="@color/default_text_color"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/confirm_new_psw_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:hint="@string/hint_input_new_password"
            android:inputType="text"
            android:maxLength="20"
            android:minHeight="48dip"
            android:paddingLeft="18dip"
            android:textColor="@color/default_text_color"
            android:textColorHint="@color/tab_unselect_color"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/show_psw_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/psw_show_selector"
            android:drawablePadding="10dip"
            android:padding="10dip"
            android:text="显示密码"
            android:textColor="@color/default_text_color"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>