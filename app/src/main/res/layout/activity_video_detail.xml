<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <include layout="@layout/include_head_item"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/answer_list_divide_line"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/gray_f7f7f7"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/function_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/real_video_tv"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/vertical_live_streaming"
                    android:drawablePadding="@dimen/dp4"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/gray_212121"
                    android:text="@string/real_time_video"
                    />
                <TextView
                    android:id="@+id/history_video_tv"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/vertical_historical_video"
                    android:drawablePadding="@dimen/dp4"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/gray_212121"
                    android:text="@string/history_time_video"
                    />
                <TextView
                    android:id="@+id/face_depot_tv"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/vertical_face_library"
                    android:drawablePadding="@dimen/dp4"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/gray_212121"
                    android:text="@string/face_depot"
                    />
                <TextView
                    android:id="@+id/body_depot_tv"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/vertical_body_library"
                    android:drawablePadding="@dimen/dp4"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/gray_212121"
                    android:text="@string/body_depot"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp6"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="摄像机名称"
                    />
                <TextView
                    android:id="@+id/device_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/answer_list_divide_line"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="设备编号"
                    />
                <TextView
                    android:id="@+id/device_sn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/answer_list_divide_line"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="设备类型"
                    />
                <TextView
                    android:id="@+id/device_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:layout_marginTop="@dimen/dp4"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="设备状态"
                    />
                <TextView
                    android:id="@+id/device_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:layout_marginTop="@dimen/dp4"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="分组信息"
                    />
                <TextView
                    android:id="@+id/device_organize_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_location_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@drawable/selector_button_press_white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:layout_marginTop="@dimen/dp4"
                >
                <TextView
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:text="安装位置"
                    />
                <TextView
                    android:id="@+id/device_location_tv"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="start"
                    android:textColor="@color/gray_212121"
                    android:drawableRight="@drawable/icon_location"
                    android:drawablePadding="@dimen/dp4"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/answer_list_divide_line"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="场所类型"
                    />
                <TextView
                    android:id="@+id/device_address_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/answer_list_divide_line"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="朝向"
                    />
                <TextView
                    android:id="@+id/device_direction_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/answer_list_divide_line"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="安装高度"
                    />
                <TextView
                    android:id="@+id/device_distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:layout_marginTop="@dimen/dp4"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="维护单位"
                    />
                <TextView
                    android:id="@+id/device_compony_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/answer_list_divide_line"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="联系电话"
                    />
                <TextView
                    android:id="@+id/device_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/answer_list_divide_line"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/gray_424242"
                    android:layout_weight="1"
                    android:text="安装时间"
                    />
                <TextView
                    android:id="@+id/device_install_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/gray_212121"
                    />
            </LinearLayout>


        </LinearLayout>



    </ScrollView>
</LinearLayout>
