<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/report_multi_item_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
    >

    <TextView
        android:id="@+id/report_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="275dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sp15"
        />

    <ImageView
        android:id="@+id/report_status_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_clue_sent"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/report_title_tv"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginTop="@dimen/dp12"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/location_label"
            />

        <TextView
            android:id="@+id/location_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/location_label"
            android:ellipsize="middle"
            android:maxWidth="240dp"
            android:singleLine="true"
            android:textColor="@color/mine_text_color"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/report_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2017.06.01"
            android:textColor="@color/mine_text_color"
            android:textSize="@dimen/sp12"
            />

    </RelativeLayout>

</RelativeLayout>
