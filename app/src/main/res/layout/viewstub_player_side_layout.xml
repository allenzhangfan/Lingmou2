<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/side_stub_ll"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/collect_video"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@color/transparent"
            android:src="@drawable/selector_collect_video"
            android:scaleType="centerInside"
            />

        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginTop="5dip"
            android:background="@color/transparent"
            android:src="@drawable/selector_mute_unmute"
            />

        <ImageView
            android:id="@+id/capture_video"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginTop="5dip"
            android:background="@color/transparent"
            android:src="@drawable/selector_capture_video"
            />

        <ImageView
            android:id="@+id/iv_back_record"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginTop="5dip"
            android:background="@color/transparent"
            android:src="@drawable/selector_back_record"
            />

        <ImageView
            android:id="@+id/iv_back_live"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginTop="5dip"
            android:background="@color/transparent"
            android:src="@drawable/selector_back_live"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>
