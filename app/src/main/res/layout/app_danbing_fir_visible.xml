<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/face_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/app_tv_margin"
            android:paddingBottom="@dimen/app_tv_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="18dip"
            android:drawableTop="@drawable/face_eyes"
            android:gravity="center"
            android:text="火眼金睛"
            android:textColor="@color/default_text_color"
            android:textSize="14sp" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/login_divide_line_color" />

        <TextView
            android:id="@+id/face_bukong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/app_tv_margin"
            android:paddingBottom="@dimen/app_tv_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="18dip"
            android:drawableTop="@drawable/app_bukong"
            android:gravity="center"
            android:text="布控报警"
            android:textColor="@color/default_text_color"
            android:textSize="14sp" />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/login_divide_line_color" />
        <TextView
            android:id="@+id/live_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/app_tv_margin"
            android:paddingBottom="@dimen/app_tv_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawablePadding="18dip"
            android:drawableTop="@drawable/app_soldier"
            android:gravity="center"
            android:text="单兵直播"
            android:textColor="@color/default_text_color"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>