<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        >

        <ImageView
            android:id="@+id/collect_camera_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera_gunlock"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="14dp"
            >

            <TextView
                android:id="@+id/collect_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/default_text_color"
                android:textSize="14sp"
                tools:text="市民服务站"
                />

            <TextView
                android:id="@+id/collect_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="start"
                android:singleLine="true"
                android:textColor="@color/tab_unselect_color"
                android:textSize="11sp"
                android:visibility="gone"
                tools:text="市民服务站>东海县>哈哈乡"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/map_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="@dimen/dp16"
            android:paddingTop="20dp"
            android:scaleType="center"
            android:src="@drawable/organize_camera_location"
            android:visibility="gone"
            />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow"
            android:layout_marginRight="@dimen/dp20"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/login_divide_line_color"
        />
</LinearLayout>
