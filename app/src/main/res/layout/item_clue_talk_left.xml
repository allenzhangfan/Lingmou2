<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:paddingTop="20dp"
    >

    <cloud.antelope.lingmou.mvp.ui.widget.CircleImageView
        android:id="@+id/user_avatar_cv_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_avatar"
        app:border_color="@color/my_divider_bg_grey"
        app:border_width="0.5dp"
        android:layout_marginTop="40dip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/talk_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="2017-04-03 "
            android:textColor="@color/edit_text_hint_color"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="1dp"
            android:text="管理员"
            android:textColor="@color/mine_text_color"
            android:textSize="13sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/talk_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/clue_talk_left_bg"
            android:padding="10dp"
            android:textColor="@color/mine_text_color"
            android:textSize="13sp"
            />

    </LinearLayout>


</LinearLayout>
